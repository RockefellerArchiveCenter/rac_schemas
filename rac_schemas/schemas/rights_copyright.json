{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "rights_copyright.json",
	"type": "object",
	"title": "RAC Copyright Information Schema",
	"required": [
			"copyright_status",
			"copyright_jurisdiction"
	],
	"properties": {
		"copyright_identifier": {
			"$id": "#/properties/copyright_identifier",
			"type": "string",
			"title": "Copyright Documentation Identifier",
			"minLength": 1
		},
		"copyright_status": {
			"$id": "#/properties/copyright_status",
			"type": "string",
			"title": "Copyright Status",
			"minLength": 1,
			"enum": [
				"copyrighted",
				"public domain",
				"unknown"
			],
			"examples": [
				"public domain"
			]
		},
		"copyright_jurisdiction": {
			"$id": "#/properties/copyright_jurisdiction",
			"type": "string",
			"title": "Copyright Jurisdiction",
			"minLength": 1,
			"examples": [
				"FR"
			],
			"pattern": "^[A-Z]{2}$"
		},
		"determination_date": {
			"$id": "#/properties/determination_date",
			"type": ["string", "null"],
			"title": "Copyright Determination Date",
			"examples": [
				"2019-08-23"
			]
		}
	}
}
