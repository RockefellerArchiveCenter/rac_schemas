{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "base.json",
	"type": "object",
	"title": "RAC JSON Schema",
	"definitions": {
		"date": {
			"$id": "#/definitions/date",
			"type": "object",
			"title": "Dates",
			"required": [
				"begin",
				"expression",
				"label",
				"type",
				"source"
			],
			"properties": {
				"begin": {
					"$id": "#/definitions/date/properties/begin",
					"type": ["date", "null"],
					"title": "Begin Date",
					"description": "Begin date of the objects described",
					"examples": [
						"1939-06-03"
					]
				},
				"end": {
					"$id": "#/definitions/date/properties/end",
					"type": ["date", "null"],
					"title": "End Date",
					"description": "End date of the objects described",
					"examples": [
						"1991-05-23"
					]
				},
				"expression": {
					"$id": "#/definitions/date/properties/expression",
					"type": "string",
					"title": "Date Expression",
					"description": "Human readable date expression",
					"minLength": 1,
					"examples": [
						"Jun 3rd, 1939 - May 23rd, 1991"
					],
					"pattern": "^(.*)$"
				},
				"type": {
					"$id": "#/definitions/date/properties/type",
					"type": "string",
					"enum": [
						"bulk",
						"inclusive",
						"single",
						"range"
					],
					"title": "Date Type",
					"description": "The type of date being described",
					"minLength": 1,
					"examples": [
						"single"
					],
					"pattern": "^(.*)$"
				},
				"label": {
					"$id": "#/definitions/date/properties/label",
					"type": "string",
					"enum": [
						"agent_relation",
						"broadcast",
						"copyright",
						"creation",
						"deaccession",
						"digitized",
						"existence",
						"event",
						"issued",
						"modified",
						"other",
						"publication",
						"record_keeping",
						"usage"
					],
					"title": "Date label",
					"description": "Textual indication of the reason for recording the date",
					"minLength": 1,
					"examples": [
						"publication"
					]
				},
				"source": {
					"type": "string",
					"title": "Date Source",
					"examples": [
						"wikidata",
						"archivesspace"
					],
					"pattern": "^(.*)$",
					"allOf": [{
						"$ref": "#/definitions/source"
					}]
				}
			}
		},
		"extent": {
			"$id": "#/definitions/extent",
			"type": "object",
			"title": "Extents",
			"required": [
				"type",
				"value"
			],
			"properties": {
				"value": {
					"$id": "#definitions/extents/properties/value",
					"type": "string",
					"title": "Extent Value",
					"description": "Floating point value of the extent",
					"minLength": 1,
					"examples": [
						"3.7"
					]
				},
				"type": {
					"$id": "#definitions/extents/properties/type",
					"type": "string",
					"title": "Extent Type",
					"description": "Records the type of the extent value",
					"minLength": 1,
					"examples": [
						"record cartons"
					],
					"pattern": "^(.*)$"
				}
			}
		},
		"external_identifier": {
			"$id": "#/definitions/external_identifier",
			"type": "object",
			"title": "External Identifiers",
			"required": [
				"identifier",
				"source"
			],
			"properties": {
				"source": {
					"type": "string",
					"title": "External Identifier Source",
					"examples": [
						"wikidata",
						"archivesspace"
					],
					"pattern": "^(.*)$",
					"oneOf": [{
						"$ref": "#/definitions/source"
					}]
				},
				"identifier": {
					"$id": "#/definitions/external_identifier/properties/identifier",
					"type": "string",
					"minLength": 1,
					"title": "External Identifiers ID",
					"examples": [
						"5d604f4ffaa7bea21d1f258d"
					],
					"pattern": "^(.*)$"
				}
			}
		},
		"group": {
			"$id": "#/definitions/group",
			"type": "object",
			"title": "Group",
			"required": [
				"identifier",
				"title"
			],
			"properties": {
				"category": {
					"$id": "#/definitions/group/properties/category",
					"type": "string",
					"title": "Group Category",
					"enum": [
						"collection",
						"organization",
						"person",
						"subject"
					]
				},
				"creators": {
					"$id": "#/definitions/group/properties/creators",
					"type": "array",
					"title": "Group Creators",
					"items": {
						"allOf": [{
							"$ref": "base.json#/definitions/reference"
						}]
					}
				},
				"dates": {
					"$id": "#/definitions/group/properties/dates",
					"type": "array",
					"title": "Group Dates",
					"items": {
						"allOf": [{
							"$ref": "base.json#/definitions/date"
						}]
					}
				},
				"identifier": {
					"$id": "#/definitions/group/properties/identifier",
					"type": "string",
					"title": "Group Identifier",
					"pattern": "^(.*)$"
				},
				"title": {
					"$id": "#/definitions/group/properties/title",
					"type": "string",
					"title": "Group Title",
					"pattern": "^(.*)$"
				}
			}
		},
		"language": {
			"$id": "#/definitions/language",
			"type": "object",
			"title": "Languages",
			"required": [
				"expression",
				"identifier"
			],
			"properties": {
				"expression": {
					"$id": "#/definitions/language/properties/expression",
					"type": "string",
					"title": "Language Expression",
					"minLength": 1,
					"description": "Human readable text representation of Language",
					"examples": [
						"Esperanto"
					],
					"pattern": "^(.*)$"
				},
				"identifier": {
					"$id": "#/definitions/language/properties/identifier",
					"type": "string",
					"title": "Language Identifier",
					"description": "ISO language identifier",
					"minLength": 1,
					"maxLength": 3,
					"examples": [
						"epo"
					],
					"pattern": "^(.*)$"
				}
			}
		},
		"note": {
			"$id": "#/definitions/note",
			"type": "object",
			"title": "Notes",
			"required": [
				"source",
				"subnotes",
				"title",
				"type"
			],
			"properties": {
				"type": {
					"$id": "#/definitions/note/properties/type",
					"type": "string",
					"minLength": 1,
					"enum": [
						"abstract",
						"accessrestrict",
						"accruals",
						"acqinfo",
						"altformavail",
						"appraisal",
						"arrangement",
						"bibliography",
						"bioghist",
						"custodhist",
						"fileplan",
						"index",
						"odd",
						"otherfindaid",
						"originalsloc",
						"phystech",
						"prefercite",
						"processinfo",
						"relatedmaterial",
						"scopecontent",
						"separatedmaterial",
						"userestrict",
						"dimensions",
						"legalstatus",
						"summary",
						"edition",
						"extent",
						"note",
						"inscription",
						"langmaterial",
						"physdesc",
						"physloc",
						"materialspec",
						"physfacet",
						"rights_statement",
						"rights_statement_act",
						"materials",
						"type_note",
						"additional_information",
						"expiration",
						"extension",
						"permissions",
						"restrictions"
					],
					"title": "Note Types",
					"description": "The type of note being used",
					"examples": [
						"materialspec"
					],
					"pattern": "^(.*)$"
				},
				"title": {
					"$id": "#/definitions/note/properties/title",
					"type": "string",
					"minLength": 1,
					"title": "Note Title",
					"description": "String title of the note",
					"examples": [
						"officia quis eu"
					],
					"pattern": "^(.*)$"
				},
				"source": {
					"title": "Notes Source",
					"type": "string",
					"examples": [
						"wikidata"
					],
					"pattern": "^(.*)$",
					"allOf": [{
						"$ref": "#/definitions/source"
					}]
				},
				"subnotes": {
					"type": "array",
					"minItems": 1,
					"items": {
						"allOf": [{
							"$ref": "#/definitions/subnote"
						}]
					}
				}
			}
		},
		"reference": {
			"$id": "#/definitions/reference",
			"type": "object",
			"title": "References",
			"required": [
				"external_identifiers"
			],
			"properties": {
				"external_identifiers": {
					"type": "array",
					"minItems": 1,
					"items": {
						"allOf": [{
							"$ref": "#/definitions/external_identifier"
						}]
					}
				},
				"level": {
					"$id": "#/definitions/reference/properties/level",
					"type": ["string", "null"],
					"title": "Level of description",
					"description": "Records the level of description of ancestors",
					"examples": [
						"series",
						"subseries"
					],
					"pattern": "^(.*)$"
				},
				"order": {
					"$id": "#/definitions/reference/properties/order",
					"type": ["number", "null"],
					"title": "Order value",
					"description": "Helps set the order of references",
					"examples": [
						"1",
						"-4"
					],
					"pattern": "^(.*)$"
				},
				"relator": {
					"$id": "#/definitions/reference/properties/relator",
					"type": ["string", "null"],
					"title": "Agent relator",
					"description": "Relation of linked agent",
					"examples": [
						"aut"
					],
					"pattern": "^(.*)$"
				},
				"role": {
					"$id": "#/definitions/reference/properties/role",
					"type": ["string", "null"],
					"title": "Agent relator",
					"description": "Role of linked agent",
					"examples": [
						"creator",
						"subject"
					],
					"pattern": "^(.*)$"
				},
				"title": {
					"$id": "#/definitions/reference/properties/title",
					"type": ["string", "null"],
					"title": "Title",
					"description": "Reference title",
					"examples": [
						"Correspondence, 1925-1930"
					],
					"pattern": "^(.*)$"
				},
				"type": {
					"$id": "#/definitions/reference/properties/type",
					"type": ["string", "null"],
					"title": "Type",
					"description": "Reference type",
					"enum": [
						"cultural_context",
						"function",
						"geographic",
						"genre_form",
						"occupation",
						"style_period",
						"technique",
						"temporal",
						"topical",
						"person",
						"organization",
						"family",
						"software",
						"object",
						"collection",
						null
					]
				},
				"uri": {
					"$id": "#/definitions/reference/properties/uri",
					"type": ["string", "null"],
					"title": "URI",
					"description": "Relative link",
					"examples": [
						"collections/23rq4df3asdfaf"
					],
					"pattern": "^(.*)$"
				}
			}
		},
		"source": {
			"$id": "#/definitions/source",
			"type": "string",
			"enum": [
				"archivesspace",
				"cartographer",
				"wikidata",
				"wikipedia"
			],
			"title": "Sources",
			"description": "Source of item",
			"minLength": 1,
			"examples": [
				"cartographer"
			]
		},
		"subnote": {
			"$id": "#/definitions/subnote",
			"type": "object",
			"title": "Subnotes",
			"required": ["type"],
			"properties": {
				"type": {
					"$id": "#/definitions/subnote/properties/type",
					"type": "string",
					"enum": [
						"definedlist",
						"orderedlist",
						"text"
					],
					"title": "Subnote Type",
					"minLength": 1,
					"examples": [
						"definedlist"
					],
					"pattern": "^(.*)$"
				},
				"content": {
					"$id": "#/definitions/subnote/properties/content",
					"type": "array",
					"title": "Subnote Content",
					"items": {
						"$id": "#/definitions/subnote/properties/content/items",
						"type": ["string", "null"],
						"title": "Content Items",
						"examples": [
							"cupidatat quis culpa amet labore incididunt",
							"ullamco in Lorem ad minim labore",
							"laborum dolore adipisicing aliquip incididunt ad",
							"elit ipsum quis ex do dolore"
						]
					}
				},
				"items": {
					"$id": "#/definitions/subnote/properties/items",
					"type": "array",
					"title": "Subnote Items",
					"items": {
						"$id": "#/definitions/subnote/properties/items/items",
						"type": ["object", "null"],
						"title": "Items Items",
						"examples": [{
							"label": "value"
						}]
					}
				}
			}
		},
		"rights_statement": {
			"$id": "#/definitions/rights_statement",
			"title": "RAC PREMIS rights statement",
			"type": "object",
			"required": [
				"rights_basis",
				"rights_granted"
			],
			"properties": {
				"rights_identifier": {
					"$id": "#/definitions/rights_statement/properties/rights_identifier",
					"type": "string",
					"title": "Rights Statement Identifier",
					"minLength": 1
				},
				"rights_basis": {
					"$id": "#/definitions/rights_statement/properties/rights_basis",
					"type": "string",
					"title": "Rights Basis Declaration",
					"enum": [
						"copyright",
						"license",
						"other",
						"statute"
					],
					"examples": [
						"other"
					]
				},
				"rights_granted": {
					"type": "array",
					"items": {
						"allOf": [{
							"$ref": "base.json#/definitions/rights_granted"
						}]
					}
				},
				"start_date": {
					"$id": "#/definitions/rights_statement/properties/start_date",
					"title": "Rights Start Date",
					"$ref": "base.json#/definitions/rights_dates/properties/date"
				},
				"end_date": {
					"$id": "#/definitions/rights_statement/properties/end_date",
					"title": "Rights End Date",
					"$ref": "base.json#/definitions/rights_dates/properties/date"
				},
				"note": {
					"$id": "#/definitions/rights_statement/properties/note",
					"type": "string",
					"title": "Rights Note"
				},
				"other_basis": {
					"$id": "#/definitions/rights_statement/properties/other_basis",
					"type": "string",
					"title": "Other Rights Basis",
					"enum": [
						"donor",
						"policy"
					]
				}
			},
			"allOf": [
				{
					"if": {
						"properties": { "rights_basis": { "const": "other" } }
					},
					"then": {
						"dependencies": { "rights_basis": ["other_basis"] }
					}
				},
				{
					"if": {
						"properties": { "rights_basis": { "const": "copyright" } }
					},
					"then": {
						"dependencies": { "rights_basis": { "$ref": "base.json#/definitions/copyright_basis" } }
					}
				},
				{
					"if": {
						"properties": { "rights_basis": { "const": "license" } }
					},
					"then": {
						"dependencies": { "rights_basis": { "$ref": "base.json#/definitions/license_basis" } }
					}
				},
				{
					"if": {
						"properties": { "rights_basis": { "const": "statute" } }
					},
					"then": {
						"dependencies": { "rights_basis": { "$ref": "base.json#/definitions/statute_basis" } }
					}
				}
			]
		},
		"rights_dates": {
			"$id": "#/definitions/rights_dates",
			"title": "Rights date object",
			"type": "object",
			"properties": {
				"date": {
					"$id": "#/definitions/rights_dates/properties/date",
					"title": "Date",
					"type": ["string", "null"],
					"examples": [
						"2019-08-23",
						"open",
						"null"
					]
				}
			}
		},
		"rights_jurisdiction": {
			"$id": "#/definitions/rights_jurisdiction",
			"title": "Rights country jurisdiction",
			"type": "object",
			"properties": {
				"country": {
					"$id": "#/definitions/rights_jurisdiction/properties/country",
					"title": "Country",
					"minLength": 1,
					"examples": [
						"fr"
					],
					"pattern": "^[a-z]{2}$"
				}
			}
		},
		"rights_granted":{
			"$id": "#/definitions/rights_granted",
			"title": "PREMIS rights granted",
			"type": "object",
			"required": [
				"act",
				"grant_restriction"
			],
			"properties": {
				"act": {
					"$id": "#/definitions/rights_granted/properties/act",
					"type": "string",
					"title": "Rights Granted Act",
					"enum": [
						"delete",
						"disseminate",
						"modify",
						"migrate",
						"publish",
						"replicate",
						"use"
					],
					"examples": [
						"disseminate"
					]
				},
				"grant_restriction": {
					"$id": "#/definitions/rights_granted/properties/grant_restriction",
					"type": "string",
					"title": "Rights Granted Restriction Statement",
					"enum": [
						"allow",
						"conditional",
						"disallow"
					],
					"examples": [
						"allow"
					]
				},
				"start_date": {
					"$id": "#/definitions/rights_granted/properties/start_date",
					"$ref": "base.json#/definitions/rights_dates/properties/date"
				},
				"end_date": {
					"$id": "#/definitions/rights_granted/properties/end_date",
					"$ref": "base.json#/definitions/rights_dates/properties/date"
				},
				"note": {
					"$id": "#/definitions/rights_granted/properties/note",
					"title": "Granted Note",
					"items": {
						"allOf": [{
							"$ref": "base.json#/definitions/rights_statement/properties/note"
						}]
					}
				}
			},
			"if": {
				"properties": { "grant_restriction": { "const": "conditional" } }
			},
			"then": {
				"dependencies": { "grant_restriction": ["note"] }
			}
		},
		"copyright_basis": {
			"$id": "#/definitions/copyright_basis",
			"title": "PREMIS copyright basis",
			"type": "object",
			"required": [
					"copyright_status",
					"copyright_jurisdiction"
			],
			"properties": {
				"copyright_status": {
					"$id": "#/definitions/copyright_basis/properties/copyright_status",
					"type": "string",
					"title": "Copyright Status",
					"enum": [
						"copyrighted",
						"public domain",
						"unknown"
					],
					"examples": [
						"public domain"
					]
				},
				"copyright_jurisdiction": {
					"$id": "#/definitions/copyright_basis/properties/copyright_jurisdiction",
					"title": "Copyright Jurisdiction",
					"$ref": "base.json#/definitions/rights_jurisdiction/properties/country"
				},
				"determination_date": {
					"$id": "#/definitions/copyright_basis/properties/determination_date",
					"title": "Copyright Determination Date",
					"$ref": "base.json#/definitions/rights_dates/properties/date"
				}
			}
		},
		"license_basis": {
			"$id": "#/definitions/license_basis",
			"title": "PREMIS license basis",
			"type": "object",
			"properties": {
				"license_terms": {
					"$id": "#/definitions/license_basis/properties/license_terms",
					"type": "string",
					"title": "License Terms"
				},
				"determination_date": {
					"$id": "#/definitions/license_basis/properties/determination_date",
					"title": "License Basis Determination Date",
					"$ref": "base.json#/definitions/rights_dates/properties/date"
				}
			}
		},
		"statute_basis": {
			"$id": "#/definitions/statute_basis",
			"title": "PREMIS statute basis",
			"required": [
					"statute_jurisdiction",
					"statute_citation"
				],
			"properties": {
				"statute_jurisdiction": {
					"$id": "#/definitions/statute_basis/properties/statute_jurisdiction",
					"title": "Statute Jurisdiction",
					"$ref": "base.json#/definitions/rights_jurisdiction/properties/country"
				},
				"statute_citation": {
					"$id": "#/definitions/statute_basis/properties/statute_citation",
					"type": "string",
					"title": "Statute Citation"
				},
				"determination_date": {
					"$id": "#/definitions/statute_basis/properties/determination_date",
					"title": "Statute Determination Date",
					"$ref": "base.json#/definitions/rights_dates/properties/date"
				}
			}
		}
	}
}
