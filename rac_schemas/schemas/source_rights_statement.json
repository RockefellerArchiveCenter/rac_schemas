{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "source_rights_statement.json",
	"type": "object",
	"title": "RAC JSON Schema",
  "source_rights_statement": {
    "type": "object",
    "items": {
      "properties": {
        "rights_basis": {
          "type": "string"
        },
        "determination_date": {
          "type": ["date", "null"]
        },
        "jurisdiction": {
          "type": ["string", "null"]
        },
        "start_date": {
          "type": "date"
        },
        "end_date": {
          "type": "date"
        },
        "note": {
          "type": "string"
        },
        "status": {
          "type": ["string", "null"]
        },
        "terms": {
          "type": ["string", "null"]
        },
        "citation": {
          "type": ["string", "null"]
        },
        "other_rights_basis": {
          "type": ["string", "null"]
        },
        "rights_granted": {
          "type": "array",
          "items": {
            "properties": {
              "act": {
                "enum": [
                  "publish",
                  "disseminate",
                  "replicate",
                  "migrate",
                  "modify",
                  "use",
                  "delete"]
              },
              "start_date": {
                "type": ["date", "null"]
              },
              "end_date": {
                "type": "date"
              },
              "note": {
                "type": "string"
              },
              "restriction": {
                "enum": ["allow", "disallow", "conditional"]
              }
            },
            "required": ["act", "restriction"]
          }
        }
      },
      "required": ["rights_granted"]
    }
  }
}
