{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "rights_granted.json",
	"type": "object",
	"title": "RAC Rights Granted Schema",
	"required": [
		"act",
		"grant_restriction"
	]
	"properties": {
		"act": {
			"$id": "#/properties/act",
			"type": "string",
			"title": "Rights Granted Act",
			"enum": [
				"delete",
				"disseminate",
				"modify",
				"migrate",
				"publish",
				"replicate",
				"use"
			],
			"examples": [
				"disseminate"
			]
		},
		"grant_restriction": {
			"$id": "#/properties/grant_restriction",
			"type": "string",
			"title": "Rights Granted Restriction Statement",
			"enum": [
				"allow",
				"conditional",
				"disallow"
			],
			"examples": [
				"allow"
			]
		}
	}
}
